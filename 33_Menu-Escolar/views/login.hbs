       <section class=" container py-5">
    <div class="row">
        <div class="col">            
            <form class="border p-4" action="/login" method="POST">
                <label class="form-label text-center">Login</label>
                <div class="mb-3">
                    <input type="hidden" name="login" value="login">                   
                    <input type="email" class="form-control" id="email" name="emailLogin" placeholder="email">                    
                </div>
                <div class="mb-3">                    
                    <input type="password" class="form-control" id="password" name="passwordLogin" placeholder="password"> 
                </div>                
                <button type="submit" class="btn btn-primary">Enviar</button>
            </form>
        </div>
        <div class="col ">
            <form class="border p-4" action="/login" method="POST">
                <label class="form-label text-center">Register</label>
                <div class="mb-3"> 
                    <input type="hidden" name="register" value="register">                    
                    <input type="text" class="form-control" id="name" name="name" placeholder="nombre">                    
                </div>
                <div class="mb-3">                    
                    <input type="text" class="form-control" id="school" name="school" placeholder="liceo">                    
                </div>
                <div class="mb-3">                    
                    <input type="email" class="form-control" id="email" name="email" placeholder="email">                    
                </div>
                <div class="mb-3">                    
                    <input type="password" class="form-control" id="password" name="password" placeholder="password"> 
                </div>  
                <div class="mb-3">                    
                    <input type="password" class="form-control" id="password-confirm" name="passwordConfirm" placeholder="confirm"> 
                </div>              
                <button type="submit" class="btn btn-primary">Enviar</button>
            </form>
        </div>
    </div>

</section>


